@model IEnumerable<GuniKitchen.Web.Models.Product>

@{
    ViewData["Title"] = "List of Products";
}

@*<h1>@ViewData["Title"]</h1>*@




<div class="card-columns">
    @foreach (var item in Model)
    {
        <div class="card bg-light">
            <div class="font-weight-bold text-center" 
                 style="border-bottom: 2px dashed #ccc; width: 80%; margin: 0 auto; padding:10px;">
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </div>
            <div style="max-width:390px;">
                <img src="@item.ProductImageFileUrl" class="img-fluid rounded card-img-top" />
            </div>
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayFor(modelItem => item.ProductName)</h4>
                <p class="card-text">@Html.DisplayFor(modelItem => item.ProductDescription)</p>
                <h5 class="card-text text-center">@item.Price.ToString("$ 0.00")</h5>
            </div>
           
        </div>
    }
</div>
